<div>
   {{#with main}}
  
       <main>
          <section>
              {{> title data="My educationss" big=true}}
              
               <ul>
                  {{#each educations}}
                  <li>
                      {{name}} 
                      {{#unless isEnd}} (is studying else) {{/unless}}
                      
                  </li>
                  {{/each}}
               </ul>
            </section> 

            <section>
              {{> title data="My certificates" big=false}}
                           <ul>
                  {{#each certificates}}
                  <li>
                      {{name}} ({{id}})
                      {{#unless id includeZero=false}} (is studying else) {{/unless}}
                  </li>
                  {{/each}}
               </ul>
            </section> 
       </main>
    {{/with}}
  </div>